@model Fiap05.Web.MVC.Models.Especialidade

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Especialidade</h2>

@Ajudador.Mensagem(TempData["msg"])

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(e => e.Nome)
        @Html.TextBoxFor(e => e.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Descricao)
        @Html.TextAreaFor(e => e.Descricao, new { @class = "form-control"})
    </div>
    @Ajudador.Botao("Cadastrar")
}

